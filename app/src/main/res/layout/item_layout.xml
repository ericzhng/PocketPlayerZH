<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_margin="4dp"
    android:elevation="100dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/audio_id"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="@string/audio_id"
            android:textColor="@color/primary_text"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_horizontal"
            android:textSize="@dimen/item_textsize"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/audio_play_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            style="@style/ExoMediaButton.Play"
            android:layout_gravity="center_vertical"
            android:tint="@color/pink"
            android:foregroundGravity="center_vertical"
            android:layout_margin="2dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/content_play" />

        <TextView
            android:id="@+id/audio_title"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="@string/audio_title"
            android:textColor="@color/primary_text"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:textSize="@dimen/item_textsize"
            android:foregroundGravity="center_horizontal"/>

        <TextView
            android:id="@+id/audio_size"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/audio_size"
            android:layout_marginLeft="2dp"
            android:textColor="@color/secondary_text"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/item_textsize"
            android:foregroundGravity="center_horizontal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>